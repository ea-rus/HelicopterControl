<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calibration"
            android:layout_gravity="left|center_vertical" />

        <EditText
            android:layout_width="188dp"
            android:layout_height="305dp"
            android:id="@+id/textlog"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="7dp"
            android:text="debug:"
            android:textAlignment="viewEnd" />

        <com.earus.helicoptercontroll.VerticalSeekBar android:id="@+id/throttle"
            android:layout_width="wrap_content"
            android:layout_height="221dp"
            android:layout_toRightOf="@+id/seekbar_reverse"
            android:layout_gravity="right|center_vertical"
            android:progress="0"
            android:focusableInTouchMode="true"
            android:max="100" />

        <SeekBar
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/direct_side"
            android:layout_gravity="left|top"
            android:progress="50"
            android:focusableInTouchMode="false"
            android:max="100" />

        <com.earus.helicoptercontroll.VerticalSeekBar android:id="@+id/direct_forward"
            android:layout_width="wrap_content"
            android:layout_height="181dp"
            android:layout_toRightOf="@+id/seekbar_reverse"
            android:layout_gravity="center_horizontal|top"
            android:progress="50"
            android:max="100" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/button_clear"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="clear"/>
    </FrameLayout>
</RelativeLayout>
